{
  "name": "metal",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "lint": "npx @biomejs/biome check .",
    "format": "npx @biomejs/biome format .",
    "typecheck": "turbo run typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm format"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "tsup": "^8.0.2",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  }
}
